<div class="indhold">
    <div class="fader"></div>
    <slot />
</div>

<style>
    .indhold {
        background-color: var(--white);
        min-height: fit-content;
        z-index: 1;
        position: relative;
    }

    .fader {
        background: var(--white);
        height: 100%;
        width: 100%;
        position: absolute;
        bottom: 0;
        z-index: 2;
        transition: opacity: 0.5s ease; 
        opacity: 1;
        pointer-events: none;
    }

</style>

<script>
    const fader = document.querySelector('.fader');

    // on load, fade in content
    window.addEventListener('load', () => {
        fader.animate([
            { opacity: 1 },
            { opacity: 0 }
        ], {
            duration: 150,
            easing: 'ease-out',
            fill: 'forwards'
        });
    });
</script>