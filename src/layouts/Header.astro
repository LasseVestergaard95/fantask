<script>
    const nav = document.querySelector('.burgermenu');
    let clicked = false;
    nav.addEventListener('click', () => {
        if (clicked) {
            nav.setDirection(-1);
            nav.play();
            clicked = false;
        } else {
            nav.setDirection(1);
            nav.play();
            clicked = true;
        }
    });

</script>



