<script>
  // Get the burger menu element
  const nav = document.querySelector(".burgermenu");
  // Get the main navigation links element
  const mobile_nav = document.querySelector(".mobile_nav_container");
  let clicked = false;

  nav.addEventListener("click", () => {
    if (clicked) {
      // Reverse the animation direction
      nav.setDirection(-1);
      // Play the animation
      nav.play();
      // Reset clicked state
      clicked = false;
      // Animate the nav links to hide them
      mobile_nav.animate(
        [
          { opacity: 0.95, pointerEvents: "all" },
          { opacity: 0, pointerEvents: "none" },
        ],
        {
          duration: 300,
          easing: "ease-in-out",
          fill: "forwards",
        }
      );
    } else {
      // Set the animation direction to forward
      nav.setDirection(1);
      // Play the animation
      nav.play();
      // Set clicked state to true
      clicked = true;
      // Animate the nav links to show them
      mobile_nav.animate(
        [
          { opacity: 0, pointerEvents: "none" },
          { opacity: 0.95, pointerEvents: "all" },
        ],
        {
          duration: 300,
          easing: "ease-in-out",
          fill: "forwards",
        }
      );
    }
  });

  // add screen click event listener to close menu
  window.addEventListener("click", (e) => {
    // if the menu is open and the click is outside the menu
    if (clicked && !nav.contains(e.target)) {
      // Reverse the animation direction
      nav.setDirection(-1);
      // Play the animation
      nav.play();
      // Reset clicked state
      clicked = false;
      // Animate the nav links to hide them
      mobile_nav.animate(
        [
          { opacity: 0.95, pointerEvents: "all" },
          { opacity: 0, pointerEvents: "none" },
        ],
        {
          duration: 300,
          easing: "ease-in-out",
          fill: "forwards",
        }
      );
    }
  });
</script>

