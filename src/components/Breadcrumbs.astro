<!-- breadcrumbs html -->

<div>
    <ul class="breadcrumbs">
        <li><a href="/">Forside</a></li>
        <li>&gt;</li>
        <li><a href={Astro.props.type}>{Astro.props.type}</a></li>
        <li>&gt;</li>
        {
            Astro.props.genre !== "" ? <li><a href={Astro.props.type}>{Astro.props.genre}</a></li> : null
        }
        {
            Astro.props.genre !== "" ? <li>&gt;</li> : null

        }
        <li class="active">{Astro.props.side}</li>
    </ul>
</div>

<style>
    .breadcrumbs {
        list-style: none;
        width: 1020px;
        margin: 0 auto;
        padding-inline: 2rem;
        margin-bottom: 2rem;
        display: flex;
        align-items: center;
        justify-content: flex-start;
    }

    .breadcrumbs li {
        display: inline-block;
        margin-right: 10px;
        text-transform: capitalize;
        cursor: default;
    }

    .breadcrumbs li a {
        color: #000;
        text-decoration: none;
        cursor: pointer;
    }

    .breadcrumbs li.active {
        color: #999;
    }

    .breadcrumbs li.active::after {
        content: ">";
        margin-left: 10px;
    }

    .breadcrumbs li:last-child.active::after {
        content: "";
    }

    @media screen and (max-width: 1020px) {
        .breadcrumbs {
            width: 100%;
            padding-inline: 2rem
        }
    }
</style>