---
const {type, genre, serie, titel} = Astro.props;

const breadcrumbs = [type, genre, serie, titel];
---

<!-- breadcrumbs html -->

<div>
    <ul class="breadcrumbs">
        <li>
            <a href="/">Forside</a>
        </li>
        {
            breadcrumbs.map((item, index) => {
                if (item) {
                    return (
                        <li >
                            <a href={
                                // type links to type, if genre is set, links to genre, if serie is set, links to serie, if titel is set, links to titel
                                index === 0 ? `/${item}` : index === 1 ? `/${item}` : index === 2 ? `/${genre}` : `/`
                            }>{item}</a>
                        </li>
                    )
                }
            })
        }
    </ul>
</div>

<style>
    .breadcrumbs {
        list-style: none;
        width: 100%;
        margin: 0 auto;
        margin-bottom: 4rem;
        display: flex;
        flex-direction: column;
        align-items: flex-start;
        justify-content: flex-start;
    }

    .breadcrumbs li {
        display: inline-block;
        text-transform: capitalize;
        cursor: default;
    }

    .breadcrumbs li a {
        color: #000;
        text-decoration: none;
        cursor: pointer;
    }

    .breadcrumbs li::after {
        content: "/";
        margin-inline: 0.5rem;
        color: #999;
    }

    .breadcrumbs li:last-child a{
        color: #999;
        cursor: default;
    }
    .breadcrumbs li:last-child::after {
        content: "";
    }

    @media screen and (min-width: 1020px) {
        .breadcrumbs {
            flex-direction: row;
            justify-content: flex-start;
            align-items: center;
        }
    }
</style>