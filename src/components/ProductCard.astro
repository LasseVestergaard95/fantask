---
import Button from "./Button.astro";
import Tag from "./Tag.astro";

// Destructure properties from Astro.props
const {titel, forfatter, type, format, pris, img, sprog, genre, serie, nr} = Astro.props;

// If the number of the product (nr) exists, prepend it with '#', otherwise leave it as null. 
const nr2 = nr && `nr. ${nr}`;

// Create an array of tags from the product properties. 
const tags = [nr2, format, sprog];


---

<!-- Product card container -->
<div class="product_card">
    <!-- Link to the specific product page constructed from the product series, number and title -->
    <a href=`/${serie + nr + titel}` class="cover_container" title={titel}>
        <!-- Display the product cover image -->
        <img src={`/imgs/${img}.jpg`} class="cover">
        <!-- Button for adding the product to favorites -->
        <button class="favorit">
            <img src="/favoritter_sort_hjerte.svg" alt="">
        </button>
    </a>

    <!-- Container for product info -->
    <div class="info">
        <!-- Container for title and author info -->
        <div>
            <!-- Display the product title as a link to its page -->
            <h2 class="titel">
                <a href=`/${serie + nr + titel}` title={titel}>
                    {titel}
                </a>
            </h2>
            
            <!-- Display the product author -->
            <div class="forfatter">
                <img src="/forfatter.svg" alt="">
                <a href=`/${forfatter}`>{forfatter}</a>
            </div >
        </div>

        <!-- Container for tags, display type and genre if it exists -->
        <div class="tags">
            <Button link={type}>{type}</Button>
            <!-- if genre is true add genre Button -->
            {genre && <Button link={genre}>{genre}</Button>}

            <!-- Iterate over tags array and display each tag -->
            {tags.map(tag => {
                if (tag) {
                    return <Tag>{tag}</Tag>
                }
            })}
        </div>

        <!-- Container for price and purchase button -->
        <div class="salg">
            <!-- Display the product price -->
            <div class="pris">
                <h2><span>{pris}</span>,00 kr.</h2>
            </div>
            <!-- Button for adding the product to the cart -->
            <button class="køb">
                <img src="/shoppingcart.svg" alt="">
                Læg i Kurv
            </button>
        </div>       
    </div>
</div>


<style>

    h2 {
        font-weight: 600;
    }
    a {
        text-decoration: none;
        color: var(--black);
        overflow-wrap: break-word;
        overflow: hidden;
        text-overflow: ellipsis;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;

    }
    .product_card {
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        align-items: center;
        margin: 1rem 0;
        border: 1px solid rgba(3, 13, 50, 0.35);
        border-radius: 5px;
        font-size: 16px;
        width: 240px;
        overflow: hidden;
    }

    .cover_container {
        aspect-ratio: auto;
        height: auto;
        position: relative;
        cursor: pointer;
    }

    .cover {
        aspect-ratio: 2/3;
        width: 100%;
        object-fit: cover;
        object-position: center;
        transition: filter 0.3s ease;
        image-rendering: auto;
        filter: brightness(0.9);
    }

    .product_card:hover .cover {
        filter: brightness(1);
    }

    .favorit {
        aspect-ratio: 1/1;
        background-color: var(--white);
        border-radius: 50%;
        width: 2.5rem;
        display: flex;
        justify-content: center;
        align-items: center;
        cursor: pointer;
        margin: 0.5rem;
        border: 1px solid var(--black);
        opacity: 0.5;
        transition: opacity 0.2s ease;
        position: absolute; /* Added position absolute */
        bottom: 0; /* Positioned at the bottom */
        right: 0; /* Positioned at the right */
    }

    .product_card:hover .favorit{
        opacity: 1;
    }

    /* .cover_container:hover .cover {
        transform: scale(1.03);
    } */

    .favorit img {
        aspect-ratio: 1/1;
        width: 50%;
        transform: translateY(0.8px)
    }

    .info {
        height: 21rem;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        border-top: 1px solid rgba(3, 13, 50, 0.35);
        width: 100%;
    }

    .titel {
        padding-inline: 0.9rem;
        padding-top: 0.9rem;
    }

    .forfatter {
        padding-inline: 0.9rem;
        display: flex;
        align-items: center;
        margin: 0.5rem 0;
    }

    .forfatter img {
        aspect-ratio: 1/1;
        width: 1.2rem;
        margin-right: 0.25rem;
    }

    .tags {
        padding-inline: 0.9rem;
        display: flex;
        flex-wrap: wrap;
        gap: 0.5rem;
    }

    .salg {
        width: 100%;
        padding-inline: 0.9rem;
        padding-bottom: 0.9rem;
    }
    .pris{
        font-weight: 500;
        font-size: 20px;
        margin-top: 0.5rem;
    }


    .køb {
        width: 100%;
        padding: 0.9rem;
        background-color: var(--dark-blue);
        color: var(--white);
        border: none;
        padding: 0.8rem 1rem;
        border-radius: 5px;
        font-weight: 500;
        font-size: 20px;
        margin-top: 0.5rem;
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 0.5rem;
        cursor: pointer;
    }

    .køb img {
        aspect-ratio: 1/1;
        width: 1.2rem;
    }

    @media (max-width: 768px) {
        .product_card {
            width: 170px;
        }

        .info {
            height: 16rem;
        }

        .titel {
            padding-inline: 0.45rem;
            padding-top: 0.45rem;
        }

        .forfatter {
            padding-inline: 0.45rem;
            margin: 0.25rem 0;
        }

        .tags {
            padding-inline: 0.45rem;
        }

        .salg {
            padding-inline: 0.45rem;
            padding-bottom: 0.45rem;
        }

        .køb {
            font-size: 16px;
        }

        .tags {
            flex-wrap: nowrap;
            overflow: scroll;
            /* no scrollbar */
            -ms-overflow-style: none;  /* IE and Edge */
            scrollbar-width: none;  /* Firefox */
        }
    }

</style>
