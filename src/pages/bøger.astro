---
import BackgroundPages from "../components/BackgroundPages.astro";
import ProductGrid from "../components/ProductGrid.astro";
import MainLayout from "../layouts/MainLayout.astro";
---

<MainLayout titel="Fantask">
    <BackgroundPages/>
    <div class="indhold">
        <div class="head">
            <h1>Bøger</h1>
            <div class="filtrer">
                <form>
                    <select name="sorter" id="sorter" class="sorter">
                        <option value="populaer">Mest Populære</option>
                        <option value="nyeste">Nyeste</option>
                        <option value="alfabetisk">Alfabetisk</option>
                        <option value="pris">Pris</option>
                    </select>
                </form>
                <div class="filter_knap">Filtrér
                        <div class="submenu">
                            <div class="bubble">
                                <ul>Format
                                    <li>
                                        <input type="checkbox" id="Hardcover"></input>
                                        <label for="Hardcover">Hardcover</label>
                                    </li>
                                    <li>
                                        <input type="checkbox" id="Paperback"></input>
                                        <label for="Paperback">Paperback</label>
                                    </li>
                                </ul>
                                <ul>Sprog
                                    <li>
                                        <input type="checkbox" id="Engelsk"></input>
                                        <label for="Engelsk">Engelsk</label>
                                    </li>
                                    <li>
                                        <input type="checkbox" id="Dansk"></input>
                                        <label for="Dansk">Dansk</label>
                                    </li>
                                </ul>
                            </div>
                            <div class="pointer"></div>
                        </div>
                </div>
            </div>
        </div>

        <ProductGrid type="Bog"/>
    </div>
</MainLayout>

<style>

    li {
        list-style: none;
    }

    input {
        cursor: pointer;
    }

    input[type="checkbox"] {
        margin-right: 0.2rem;
        font-weight: 300;
    }

    label {
        font-weight: 400;
    }
    .head {
        padding-inline: 2rem;
        margin: 0 auto;
        max-width: 1100px;
    }
    
    .head h1 {
        margin-bottom: 1rem;
    }

    .filtrer {
        display: flex;
        justify-content: flex-start;
        align-items: center;
        gap: 1rem;

    }

    .filter_knap {
        cursor: pointer;
        border: 1px solid var(--black);
        border-radius: 5px;
        padding: 0.2rem 0.7rem;
    }
    .filter_knap:hover .submenu {
            opacity: 1;
            pointer-events: all;
        }
    
    .sorter {
        border: 1px solid var(--black);
        border-radius: 5px;
        padding: 0.32rem 0.7rem;
        font-size: 16px;
        font-weight: 400;
    }
    .submenu {
            position: absolute;
            width: fit-content;
            opacity: 0;
            border-radius: 15px;
            background-color: var(--white);
            padding: 3rem;
            z-index: 1;
            border: 1px solid var(--black);
            box-shadow: 0px 0px 10px 0px rgba(0, 0, 0, 0.2);
            pointer-events: none;
            transition: opacity 0.2s ease-in-out;
            transform: translateX(-42%) translateY(5%);
        }

    .bøger_li .submenu {
            transform: translateX(-43.5%) translateY(7%);
        }

    .tegneserier_li .submenu {
            transform: translateX(-38%) translateY(7%);
        }

    .submenu:hover {
            display: block;
        }

    .submenu ul {
            font-weight: 600;
            font-size: 20px;
        }

    .submenu ul a {
            font-weight: 400;
            color: var(--black);
        }

    .submenu li {
            font-size: 16px;
            margin-top: 0.1rem;
            opacity: 1;
        }

    .submenu li:first-of-type {
            margin-top: 0.2rem;
        }

    .pointer {
        width: 7rem;
        height: 7rem;
        position: absolute;
        background-color: var(--white);
        transform: translateX(-50%) translateY(-50%);
        clip-path: polygon(50% 40%, 0% 100%, 100% 100%);
        inset: (0% 45% 0% 45% round 10px);
        border-radius: 5px;
        top: -0.5rem;
        left: 50%;
        z-index: -1;
        padding-inline: 6rem;
        }
        .bubble {
            display: flex;
            flex-direction: column;
            gap: 1rem;
        }
</style>