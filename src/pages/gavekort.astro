---
import BackgroundPages from "../components/BackgroundPages.astro";
import Button from "../components/Button.astro";
import MainLayout from "../layouts/MainLayout.astro";

---

<MainLayout titel="Gavekort">
    <BackgroundPages />
    <div class="indhold">
        <div class="produkt">
            <img src=`/imgs/gavekort.jpg` alt="" class="cover">
            <div class="info">
                <div>
                    <div class="titel_favorit_container">
                        <h1 class="titel">
                            Gavekort
                        </h1>

                    </div>
                </div>
        
                <div class="salg">
                    <div class="pris">
                        <h2><span>100</span>,00 kr.</h2>
                    </div>
                    <button class="køb">
                        <img src="shoppingcart.svg" alt="">
                        Læg i Kurv
                    </button>
                </div>
                <div class="beskrivelse">
                    <h2>Beskrivelse</h2>
                    <p></p>
                </div>
            </div>
        </div>
        <div>
        </div>
    </div>

</MainLayout>


<style>

    a {
        text-decoration: none;
        color: inherit;
    }

    .produkt {
        display: flex;
        flex-direction: row;
        justify-content: space-between;
        align-items: center;
        max-width: 1020px;
        margin: 0 auto;
        padding-inline: 2rem;
    }


    .cover {
        width: 300px;
        height: 100%;
        object-fit: cover;
        place-self: flex-start;
        box-shadow: 0px 0px 6px rgba(0, 0, 0, 0.35);
    }

    .info {
        padding-left: 3rem;
        display: flex;
        flex-direction: column;
        justify-content: flex-start;
        margin-bottom: 3rem;
    }

    .titel_favorit_container {
        display: flex;
        flex-direction: row;
        justify-content: flex-start;
        align-items: center;
        gap: 1rem;
    }

    .titel {
        font-size: 32px;
        font-weight: 500;
        margin-bottom: -0.3rem;
    }

    .favorit {
        aspect-ratio: 1/1;
        background-color: var(--white);
        border-radius: 50%;
        width: 2.5rem;
        display: flex;
        justify-content: center;
        align-items: center;
        cursor: pointer;
        margin: 0.5rem;
        border: 1px solid var(--black);
    }

    .favorit img {
        aspect-ratio: 1/1;
        width: 50%;
        transform: translateY(0.8px)
    }

    .alle_titler {
        display: flex;
        flex-direction: row;
        align-items: center;
        margin: 1rem 0;
        /* border: 1px solid var(--dark-blue);
        width: fit-content;
        padding: 0.2rem 0.7rem;
        border-radius: 5px; */
    }

    .alle_titler img {
        aspect-ratio: 1/1;
        width: 1.3rem;
        margin-right: 0.25rem;
    }

    .forfatter {
        display: flex;
        flex-direction: row;
        align-items: center;
        margin: 1rem 0;
        /* border: 1px solid var(--dark-blue);
        width: fit-content;
        padding: 0.2rem 0.7rem;
        border-radius: 5px; */
    }

    .forfatter img {
        aspect-ratio: 1/1;
        width: 1.3rem;
        margin-right: 0.25rem;
        margin-left: -0.1rem;
    }

    .tags {
        display: flex;
        flex-wrap: wrap;
        gap: 0.5rem;
        margin: 1rem 0;
    }

    .salg {
        margin: 1rem 0;
    }

    .pris h2, .pris span {
        font-size: 32px;
        font-weight: 500;
        margin-bottom: 0.5rem;
    }

    .køb {
        background-color: var(--dark-blue);
        color: var(--white);
        border: none;
        padding: 0.8rem 1rem;
        border-radius: 5px;
        font-weight: 500;
        font-size: 20px;
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 0.5rem;
        cursor: pointer;
    }

    .køb img {
        aspect-ratio: 1/1;
        width: 1.2rem;
    }

    .beskrivelse {
        margin: 2rem 0;
        max-width: 34rem;
    }

    .beskrivelse h2 {
        margin-bottom: 0.5rem;
    }

    .beskrivelse p {
        margin-bottom: 0.5rem;
    }

    @media screen and (max-width: 768px) {
        .produkt {
            flex-direction: column;
            align-items: center;

        }

        .cover {
            width: 70%;
            height: auto;
            margin-bottom: 3rem;
            margin-inline: auto;
        }

        .info {
            padding-left: 0;
        }
    }

</style>
